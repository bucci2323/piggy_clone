{
  "watch": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "ext": "ts,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules",
    "logs"
  ],
  "exec": "ts-node --transpile-only src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000"
} 